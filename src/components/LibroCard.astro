---
// Componente de tarjeta de libro
interface Props {
  nombre: string;
  numCapitulos: number;
  href: string;
}

const { nombre, numCapitulos, href } = Astro.props;
---

<a
  href={href}
  class="block bg-white rounded-xl shadow-md p-6 hover:shadow-xl hover:scale-105 transition-all border-2 border-transparent hover:border-blue-500 focus:border-blue-600 focus:ring-4 focus:ring-blue-300"
>
  <h3 class="font-bold text-2xl text-blue-700 mb-3">{nombre}</h3>
  <p class="text-gray-600 text-lg">
    {numCapitulos} {numCapitulos === 1 ? 'capítulo' : 'capítulos'}
  </p>
</a>
